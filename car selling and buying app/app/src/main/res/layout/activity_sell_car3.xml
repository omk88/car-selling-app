<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sell_car_gradient">

    <TextView
        android:id="@+id/textViewLogin4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Upload a picture"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/postCar"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_marginBottom="128dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/poppins_regular"
        android:onClick="switchToSellCar3"
        android:text="Post Car"
        android:textColor="#36454F"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLogin4"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/upload1"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:adjustViewBounds="true"
                android:background="#6393C2D6"
                android:backgroundTint="#0BACF4"
                android:scaleType="fitXY"
                tools:layout_editor_absoluteX="-122dp"
                tools:layout_editor_absoluteY="111dp"
                tools:srcCompat="@drawable/selectimage" />

            <ImageView
                android:id="@+id/upload2"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:adjustViewBounds="true"
                android:background="#6393C2D6"
                android:backgroundTint="#0BACF4"
                android:baselineAligned="false"
                android:scaleType="fitXY"
                tools:layout_editor_absoluteX="50dp"
                tools:layout_editor_absoluteY="339dp"
                tools:srcCompat="@drawable/selectimage" />

            <ImageView
                android:id="@+id/upload0"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:adjustViewBounds="true"
                android:background="#6393C2D6"
                android:backgroundTint="#0BACF4"
                android:scaleType="fitXY"
                tools:layout_editor_absoluteX="238dp"
                tools:layout_editor_absoluteY="111dp"
                tools:srcCompat="@drawable/selectimage" />

        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>