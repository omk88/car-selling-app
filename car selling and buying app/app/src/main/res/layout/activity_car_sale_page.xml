<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7E7E7">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:fillViewport="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image1"
                            android:layout_width="400dp"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:background="#6393C2D6"
                            android:backgroundTint="#0BACF4"
                            android:scaleType="fitXY"
                            tools:srcCompat="@drawable/selectimage" />

                        <ImageView
                            android:id="@+id/image2"
                            android:layout_width="400dp"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:background="#6393C2D6"
                            android:backgroundTint="#0BACF4"
                            android:baselineAligned="false"
                            android:scaleType="fitXY"
                            tools:srcCompat="@drawable/selectimage" />

                        <ImageView
                            android:id="@+id/image0"
                            android:layout_width="400dp"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:background="#6393C2D6"
                            android:backgroundTint="#0BACF4"
                            android:scaleType="fitXY"
                            tools:srcCompat="@drawable/selectimage" />
                        </LinearLayout>
                    </HorizontalScrollView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_margin="8dp"
                        android:layout_marginTop="64dp"
                        app:cardBackgroundColor="#f5f7fa"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="3dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:padding="10dp"
                        android:id="@+id/cardView">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:fontFamily="@font/poppins_regular"
                                android:paddingLeft="20dp"
                                android:text="Audi A2"
                                android:textSize="23dp"
                                android:textStyle="bold"
                                android:paddingTop="10dp"
                                android:textColor="#A3A3A3" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/priceText"
                                    android:layout_width="0dp"
                                    android:layout_height="38dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/poppins_regular"
                                    android:paddingLeft="20dp"
                                    android:text="Â£1920"
                                    android:textSize="23dp"
                                    android:textColor="#A3A3A3" />

                                <TextView
                                    android:id="@+id/regText"
                                    android:layout_width="0dp"
                                    android:layout_height="38dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/poppins_regular"
                                    android:paddingRight="20dp"
                                    android:text="K456JZB"
                                    android:textSize="23dp"
                                    android:gravity="right"
                                    android:textColor="#A3A3A3" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="680dp"
                        android:layout_margin="8dp"
                        android:layout_marginTop="64dp"
                        app:cardBackgroundColor="#f5f7fa"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="3dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:padding="10dp"
                        android:id="@+id/cardView2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:orientation="horizontal"
                                android:paddingTop="20dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:paddingTop="10dp"
                                    android:paddingLeft="50dp">

                                    <ImageView
                                        android:id="@+id/mileageIcon"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_gravity="center_vertical"
                                        android:src="@drawable/mileageicon" />

                                    <TextView
                                        android:id="@+id/mileageText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.5"
                                        android:fontFamily="@font/poppins_regular"
                                        android:gravity="center_vertical|start"
                                        android:paddingLeft="5dp"
                                        android:text="90000"
                                        android:textColor="#A3A3A3"
                                        android:textSize="20sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:paddingTop="10dp"
                                    android:paddingRight="50dp">

                                    <ImageView
                                        android:id="@+id/userIcon"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_gravity="center_vertical"
                                        android:src="@drawable/ic_person" />

                                    <TextView
                                        android:id="@+id/userText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.5"
                                        android:fontFamily="@font/poppins_regular"
                                        android:gravity="center_vertical|start"
                                        android:paddingLeft="5dp"
                                        android:text="User786"
                                        android:textColor="#A3A3A3"
                                        android:textSize="20sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:orientation="horizontal"
                                android:paddingTop="20dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:paddingTop="10dp"
                                    android:paddingLeft="50dp">

                                    <ImageView
                                        android:id="@+id/fuelTypeIcon"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_gravity="center_vertical"
                                        android:src="@drawable/ic_fuel" />

                                    <TextView
                                        android:id="@+id/fuelTypeText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.5"
                                        android:fontFamily="@font/poppins_regular"
                                        android:gravity="center_vertical|start"
                                        android:paddingLeft="5dp"
                                        android:text="Diesal"
                                        android:textColor="#A3A3A3"
                                        android:textSize="20sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:paddingTop="10dp"
                                    android:paddingRight="50dp">

                                    <ImageView
                                        android:id="@+id/colourIcon"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_gravity="center_vertical"
                                        android:src="@drawable/ic_color" />

                                    <TextView
                                        android:id="@+id/colourText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.5"
                                        android:fontFamily="@font/poppins_regular"
                                        android:gravity="center_vertical|start"
                                        android:paddingLeft="5dp"
                                        android:text="Black"
                                        android:textColor="#A3A3A3"
                                        android:textSize="20sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:orientation="horizontal"
                                android:paddingTop="20dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:paddingTop="10dp"
                                    android:paddingLeft="50dp">

                                    <ImageView
                                        android:id="@+id/engineIcon"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_gravity="center_vertical"
                                        android:src="@drawable/engineicon" />

                                    <TextView
                                        android:id="@+id/engineText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.5"
                                        android:fontFamily="@font/poppins_regular"
                                        android:gravity="center_vertical|start"
                                        android:paddingLeft="5dp"
                                        android:text="1386"
                                        android:textColor="#A3A3A3"
                                        android:textSize="20sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:paddingTop="10dp"
                                    android:paddingRight="50dp">

                                    <ImageView
                                        android:id="@+id/co2Icon"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_gravity="center_vertical"
                                        android:src="@drawable/ic_co2" />

                                    <TextView
                                        android:id="@+id/co2Text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.5"
                                        android:fontFamily="@font/poppins_regular"
                                        android:gravity="center_vertical|start"
                                        android:paddingLeft="5dp"
                                        android:text="150"
                                        android:textColor="#A3A3A3"
                                        android:textSize="20sp" />
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="350dp"
                                android:orientation="vertical"
                                android:padding="30dp">
                                <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fillViewport="true">
                                    <androidx.fragment.app.FragmentContainerView
                                        android:id="@+id/map"
                                        android:name="com.google.android.gms.maps.SupportMapFragment"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center_horizontal"
                                        android:src="@drawable/ic_color" />
                                </androidx.core.widget.NestedScrollView>
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>
    </ScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/callSeller"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/poppins_regular"
            android:onClick="switchToSellCar3"
            android:text="Call Seller"
            android:textColor="#36454F"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
