<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7E7E7">

    <LinearLayout
        android:id="@+id/linearLayout21"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#E0E0E0"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/goBack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:paddingTop="22dp"
                android:paddingRight="17dp"
                android:paddingBottom="22dp"
                android:scaleX="-1"
                app:srcCompat="@drawable/arrow" />

            <TextView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:text="Back"
                android:textColor="#898989"
                android:textSize="17sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="49dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:text="Sell a Vehicle"
                android:textColor="#898989"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="49dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="10dp"
        app:cardBackgroundColor="#f5f7fa"
        app:cardCornerRadius="8dp"
        app:cardElevation="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout21">

        <LinearLayout
            android:id="@+id/linearLayout25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:background="@drawable/edit_text_background"
            android:orientation="vertical"
            android:padding="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout21">

            <EditText
                android:id="@+id/editTextCarRegistration"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edit_text_background"
                android:ems="10"
                android:fontFamily="@font/poppins_regular"
                android:hint="Registration"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:paddingTop="7.5dp"
                android:paddingBottom="5.5dp"
                android:textColor="#803B3B3B"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="16sp"
                android:windowSoftInputMode="adjustPan|stateAlwaysHidden"
                app:layout_constraintBottom_toTopOf="@+id/editTextCarMileage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.487"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/editTextCarPrice"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edit_text_background"
                android:ems="10"
                android:fontFamily="@font/poppins_regular"
                android:hint="Price"
                android:inputType="number"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:paddingTop="7.5dp"
                android:paddingBottom="5.5dp"
                android:textColor="#803B3B3B"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="16sp"
                android:windowSoftInputMode="adjustPan|stateAlwaysHidden"
                app:layout_constraintBottom_toTopOf="@+id/editTextCarMileage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/editTextCarMileage"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/edit_text_background"
                android:ems="10"
                android:fontFamily="@font/poppins_regular"
                android:hint="Mileage"
                android:inputType="number"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:paddingTop="7.5dp"
                android:paddingBottom="5.5dp"
                android:textColor="#803B3B3B"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="16sp"
                android:windowSoftInputMode="adjustPan|stateAlwaysHidden"
                app:layout_constraintBottom_toTopOf="@+id/editTextCarModel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.487"
                app:layout_constraintStart_toStartOf="parent" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="vertical">

                <EditText
                    android:gravity="start|top"
                    android:id="@+id/editTextCarModel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_text_background"
                    android:ems="10"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Description"
                    android:inputType="textMultiLine"
                    android:maxLines="7"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="7.5dp"
                    android:paddingBottom="5.5dp"
                    android:scrollbars="vertical"
                    android:textColor="#803B3B3B"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="16sp"
                    android:windowSoftInputMode="adjustPan|stateAlwaysHidden"
                    app:layout_constraintBottom_toTopOf="@+id/editTextCarPrice"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.487"
                    app:layout_constraintStart_toStartOf="parent" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_margin="8dp"
        android:padding="10dp"
        app:cardBackgroundColor="#f5f7fa"
        app:cardCornerRadius="8dp"
        app:cardElevation="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="left"
                android:paddingLeft="35dp"
                android:text="Condition"
                android:textColor="#A3A3A3"
                android:textSize="17sp"
                android:textStyle="bold" />

            <View
                android:layout_marginLeft="35dp"
                android:layout_marginBottom="8dp"
                android:layout_width="290dp"
                android:layout_height="1dp"
                android:layout_gravity="left"
                android:background="#898989" />
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_marginTop="40dp"
            android:id="@+id/scrollView"
            android:layout_width="393dp"
            android:layout_height="210dp"
            android:padding="10dp"
            app:layout_constraintBottom_toTopOf="@+id/button6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.444"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#803B3B3B"
                    android:textSize="11sp"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_editor_absoluteY="377dp">

                    <RadioButton
                        android:layout_marginRight="50dp"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/radioButton2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:buttonTint="#803B3B3B"
                        android:fontFamily="@font/poppins_regular"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:text="@string/SparesOrRepairs"
                        android:textColor="#803B3B3B"
                        android:textSize="11sp" />

                    <RadioButton
                        android:layout_marginRight="50dp"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/radioButton3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:buttonTint="#803B3B3B"
                        android:fontFamily="@font/poppins_regular"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:text="@string/PoorCondition"
                        android:textColor="#803B3B3B"
                        android:textSize="11sp" />

                    <RadioButton
                        android:layout_marginRight="50dp"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/radioButton4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:buttonTint="#803B3B3B"
                        android:fontFamily="@font/poppins_regular"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:text="@string/GoodCondition"
                        android:textColor="#803B3B3B"
                        android:textSize="11sp" />

                    <RadioButton
                        android:layout_marginRight="50dp"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/radioButton5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:buttonTint="#803B3B3B"
                        android:fontFamily="@font/poppins_regular"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:text="@string/PerfectCondition"
                        android:textColor="#803B3B3B"
                        android:textSize="11sp" />

                </RadioGroup>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:onClick="switchToSellCar2"
        android:id="@+id/callSeller"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="Next"
            android:textColor="#A3A3A3"
            android:textSize="14sp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:visibility="gone"
        android:id="@+id/button6"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/poppins_regular"
        android:onClick="switchToSellCar2"
        android:text="Next"
        android:textColor="#36454F"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>